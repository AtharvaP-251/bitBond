# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=bitBond

# JWT Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SAMESITE=Lax

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Cloudinary Configuration (REQUIRED for image uploads)
# Sign up at https://cloudinary.com to get these credentials
# 1. Go to cloudinary.com and create a free account
# 2. After login, you'll see these on your dashboard
# 3. Replace the values below with your actual credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Logging
LOG_LEVEL=info
